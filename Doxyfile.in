PROJECT_NAME           = "VCFvifia"

PROJECT_BRIEF          = "This tool creates basic statistic, plots and file comparison of vcf files"

OUTPUT_DIRECTORY       = "doc"

INPUT                  = @CMAKE_SOURCE_DIR@/src

FILE_PATTERNS          = *.cpp *.hpp

RECURSIVE              = YES

MULTILINE_CPP_IS_BRIEF = YES

EXTRACT_ALL            = YES

EXTRACT_STATIC         = YES

SHOW_DIRECTORIES       = YES

SOURCE_BROWSER         = YES

HTML_DYNAMIC_SECTIONS  = YES

USE_MATHJAX            = YES

PAPER_TYPE             = letter

HIDE_UNDOC_RELATIONS   = NO

HAVE_DOT               = YES

CALL_GRAPH             = YES

CALLER_GRAPH           = YES

JAVADOC_AUTOBRIEF      = YES

INPUT                 += README.md

USE_MDFILE_AS_MAINPAGE = README.md

HAVE_DOT               = YES

UML_LOOK               = YES
